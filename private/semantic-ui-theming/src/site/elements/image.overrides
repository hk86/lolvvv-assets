/*******************************
         Site Overrides

*******************************/
/*--------------
    Bordered
---------------*/

div.ui.bordered.image {
  border: @imageBorder;
}


.ui.image.data {
  background-clip: padding-box;
}

.ui.image.data:hover {
  opacity: 0.9;
}


/*--------------
     Sizes
---------------*/

.ui.micro.images .image,
.ui.micro.images img,
.ui.micro.images svg,
.ui.micro.image {
  width: 16px!important;
  height: auto!important;
}