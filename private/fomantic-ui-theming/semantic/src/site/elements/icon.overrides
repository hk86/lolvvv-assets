/*******************************
         Site Overrides
*******************************/


span.link.icon, span.link.icons {
  cursor: pointer;
  opacity: @linkOpacity;
  transition: opacity @defaultDuration @defaultEasing;
}

span.link.icon:hover, span.link.icons:hover {
  opacity: 1!important;
}

.menu.transition i.icon {
  height: 0.5em;
}