/*******************************
         Site Overrides
*******************************/

.ui.inverted .ui.toggle.checkbox .box,
.ui.inverted .ui.toggle.checkbox label {
  color: rgba(255, 255, 255, .87);
}

/* Active */
.ui.inverted .ui.toggle.checkbox input:checked ~ .box,
.ui.inverted .ui.toggle.checkbox input:checked ~ label {
  color: rgba(255, 255, 255, .95) !important;
}

/* Active Focus */
.ui.inverted .ui.toggle.checkbox input:focus:checked ~ .box,
.ui.inverted .ui.toggle.checkbox input:focus:checked ~ label {
  color: rgba(255, 255, 255, .95) !important;
}

