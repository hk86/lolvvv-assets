/*******************************
         Site Overrides
*******************************/

.ui.grid.spaced {
  justify-content: space-between;
  margin-left: 0rem;
  margin-right: 0rem;
}

.ui.grid.spaced > * {
  padding-left: 0rem;
  padding-right: 0rem;
}

.ui.grid.condensed {
  margin: 0;
}

.ui.grid > .condensed.column {
    padding: 0;
}

.ui.grid.condensed > .column {
    padding: 0;
}

.ui.grid.condensed + .grid {
  margin-top: 0;
}

.ui.grid:not(.condensed) + .grid.condensed {
  margin-top: 0.5rem;
}

.ui.grid.condensed > .column > .grid {
  margin: 0;
}

.ui.grid .column.header + .segment.attached {
  border-bottom: none;
}

.ui.inverted .ui.grid .column.header {
  background-color: @invertedSurface;
  border-bottom: 1px solid rgba(175,175,175,.2);
}

.ui.inverted .ui.grid .column.footer {
  border-top: 1px solid rgba(175,175,175,.2);
}

h1 + div.ui.grid, h2 + div.ui.grid, h3 + div.ui.grid,
h4 + div.ui.grid, h5 + div.ui.grid, h6 + div.ui.grid {
  margin-top: 0px;
}

@media only screen and (max-width: @largestMobileScreen) {
  .ui.divided.grid:not([class*="vertically divided"]) > .column:not(.row),
  .ui.divided.grid:not([class*="vertically divided"]) > .row > .column {
    box-shadow: @verticallyDividedBorder;
  }
  .ui.inverted .ui.divided.grid:not([class*="vertically divided"]) > .column:not(.row),
  .ui.inverted .ui.divided.grid:not([class*="vertically divided"]) > .row > .column {
    box-shadow: @verticallyDividedInvertedBorder;
  }
  .ui.divided.grid:not([class*="vertically divided"])>.column:first-child,
  .ui.divided.grid:not([class*="vertically divided"])>.row>.column:first-child {
    box-shadow: none;
  }
  .ui.inverted .ui.divided.grid:not([class*="vertically divided"])>.column:first-child,
  .ui.inverted .ui.divided.grid:not([class*="vertically divided"])>.row>.column:first-child {
    box-shadow: none;
  }
}

.ui.grid.condensed.attached.segment {
  margin: 0 -1px;
}
